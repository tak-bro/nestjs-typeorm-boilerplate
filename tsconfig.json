{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@core/*": ["./src/core/*"],
            "@entities/*": ["./src/entities/*"],
            "@modules/*": ["./src/modules/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
